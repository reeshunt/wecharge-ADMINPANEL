@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">

    <div class="col-sm-3">
        <label>Filter By Vendor</label>
        <select class="form-control select2-dropdown">
        </select>
    </div>
    <div class="col-sm-3 offset-1">
