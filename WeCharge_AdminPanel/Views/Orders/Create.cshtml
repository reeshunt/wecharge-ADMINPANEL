@using WeCharge.Model.DTO
@{
Layout = "/Views/Shared/_AdminLayout.cshtml";
}
@model OrdersDTO
<div class="content">
   <div class="container-fluid">
         <div class="card-header">
            <h3 class="card-title"><b>Add New Order<b></h3>
         </div>
      <div class="card-body">
          <form>
             <div class="row">
                <div class="col-sm-3">
                    <label asp-for="@Model.USER_ID">User</label>
                    <select asp-for="@Model.USER_ID" class="form-control select2-dropdown">
                    </select>
                </div>
                <div class="col-sm-3 offset-1">
                    <label asp-for="@Model.ADDRESS_ID">Address</label>
                    <select  asp-for="@Model.ADDRESS_ID" class="form-control select2-dropdown">
                    </select>
                </div>
                <div class="col-sm-3 offset-1">
                    <label asp-for="@Model.VENDOR_ID">Vendor</label>
                    <select  asp-for="@Model.VENDOR_ID" class="form-control select2-dropdown">
                    </select>
                </div>
             </div>
             <div class="row">
                 <div class="col-sm-3">
                    <label asp-for="@Model.FUEL_TYPE_ID">Fuel Type</label>
                    <select  asp-for="@Model.FUEL_TYPE_ID" class="form-control select2-dropdown">
                    </select>
                </div>
                <div class="col-sm-3 offset-1">
                    <label asp-for="@Model.QUANTITY">Quantity</label>
                    <input asp-for="@Model.QUANTITY" type="number" class="form-control select2-dropdown">
                </div>
                <div class="col-sm-3 offset-1">
                    <label asp-for="@Model.PRICE">Price</label>
                    <input asp-for="@Model.PRICE" type="number" class="form-control" readonly>
                </div>
             </div>
             <div class="row">
                 <div class="col-sm-3">
                    <label asp-for="@Model.TIME_SLOT_ID">Time Slot</label>
                    <select  asp-for="@Model.TIME_SLOT_ID" class="form-control select2-dropdown">
                    </select>
                 </div>
                  <div class="col-sm-3 offset-1">
                    <label asp-for="@Model.PAYMENT_MODE_ID">Payment Mode</label>
                    <select  asp-for="@Model.PAYMENT_MODE_ID" class="form-control select2-dropdown">
                    </select>
                </div>
                  <div class="col-sm-3 offset-1">
                    <label asp-for="@Model.ASSET_TYPE_ID">Asset</label>
                    <select  asp-for="@Model.ASSET_TYPE_ID" class="form-control select2-dropdown">
                    </select>
                </div>
             </div>
                <div class="row">
                    <div class="col-sm-4 mt-4">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
          </form>
      </div>
   </div>
</div>



@section scripts {
<script>
    $('.select2-dropdown').select2({
  theme: "classic"
});
</script>
}